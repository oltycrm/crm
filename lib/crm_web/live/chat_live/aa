        <div class="bg-red-50 w-full h-full">
        <h1>Listing Chats</h1>

        <%= if @live_action in [:new, :edit] do %>
          <.modal return_to={Routes.chat_index_path(@socket, :index)}>
            <.live_component
              module={CrmWeb.ChatLive.FormComponent}
              id={@chat.id || :new}
              title={@page_title}
              action={@live_action}
              chat={@chat}
              return_to={Routes.chat_index_path(@socket, :index)}
            />
          </.modal>
        <% end %>

        <table>
          <thead>
            <tr>
              <th></th>
            </tr>
          </thead>
          <tbody id="chats">
            <%= for chat <- @chats do %>
              <tr id={"chat-#{chat.id}"}>
                <td>
                  <span>
                    <%= live_redirect("Show", to: Routes.chat_show_path(@socket, :show, chat)) %>
                  </span>
                  <span>
                    <%= live_patch("Edit", to: Routes.chat_index_path(@socket, :edit, chat)) %>
                  </span>
                  <span>
                    <%= link("Delete",
                      to: "#",
                      phx_click: "delete",
                      phx_value_id: chat.id,
                      data: [confirm: "Are you sure?"]
                    ) %>
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <span><%= live_patch("New Chat", to: Routes.chat_index_path(@socket, :new)) %></span>
      </div>